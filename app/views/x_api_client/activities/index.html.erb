<p id="notice"><%= notice %></p>

<h1>Activities</h1>

<table>
  <thead>
    <tr>
      <th>X actor</th>
      <th>X verb</th>
      <th>X object</th>
      <th>X result</th>
      <th>X context</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.x_actor %></td>
        <td><%= activity.x_verb %></td>
        <td><%= activity.x_object %></td>
        <td><%= activity.x_result %></td>
        <td><%= activity.x_context %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

